<resources xmlns:tools="http://schemas.android.com/tools">
    <string name="app_name">Trackie</string>
    <string name="navigation_drawer_open">Open navigation drawer</string>
    <string name="navigation_drawer_close">Close navigation drawer</string>
    <string name="nav_header_subtitle">android.studio@android.com</string>
    <string name="action_settings">Settings</string>

    <string name="menu_home">Home</string>

    <style name="Theme.Trackie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/jet</item>
        <item name="android:windowFullscreen">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkPink</item>
        <item name="colorPrimaryVariant">@color/barbiePink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/darkPink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkmaroon</item>
        <item name="colorSecondaryVariant">@color/coolBlack</item>
        <item name="colorOnSecondary">@color/darkPink</item>

        <item name="colorAccent">@color/androidGreen</item>
        <item name="colorControlHighlight">@color/yellowGreenCrayola</item>

        <!-- Enable transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Theme.Trackie.MainButton</item>
    </style>

    <style name="Theme.Trackie.NavMenu" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">?attr/colorOnBackground</item>
        <item name="itemTextColor">?attr/colorOnBackground</item>
        <item name="headerLayout">@layout/nav_header_main_dark</item>
        <item name="selectableItemBackground">@drawable/menu_item_background</item>
    </style>

    <style name="Theme.Trackie.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/pink_gradient</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Trackie.SubscaleView">
        <item name="android:tint">@color/white_gray</item>
    </style>


</resources>