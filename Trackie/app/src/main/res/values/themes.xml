<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trackie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/white_gray</item>
        <!-- Theme Colours. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/airBlue</item>
        <item name="colorPrimaryVariant">@color/blueGray</item>
        <item name="colorOnPrimary">@color/beauBlue</item>
        <item name="colorOnBackground">@color/airBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/charcoal</item>
        <item name="colorSecondaryVariant">@color/coolBlack</item>
        <item name="colorOnSecondary">@color/beauBlue</item>

        <item name="colorAccent">@color/barbiePink</item>
        <item name="colorControlHighlight">@color/darkPink</item>

        <item name="backgroundColor">@color/white_gray</item>

        <!-- Enable transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Theme.Trackie.MainButton</item>
    </style>

    <style name="Theme.AppCompat.Trackie.NavMenu" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">?attr/colorOnBackground</item>
        <item name="itemTextColor">?attr/colorOnBackground</item>
        <item name="headerLayout">@layout/nav_header_main</item>
        <item name="selectableItemBackground">@drawable/menu_item_background</item>

    </style>


    <style name="Theme.Trackie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Trackie.AlertText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/alert_text_size</item>
        <item name="android:fontFamily">@font/bsegoeui</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Trackie.TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/bsegoeui</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Trackie.MainButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_colour</item>
        <item name="android:textColor">@drawable/button_text_colour</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Theme.Trackie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Trackie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.Trackie">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="Theme.Trackie.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Trackie.SubscaleView">
        <item name="android:tint">@color/darkmaroon</item>
    </style>

</resources>