<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/database_fragment_container">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET"
        android:fontFamily="@font/opensans_semibold"
        android:layout_above="@id/set_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/set_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_above="@id/remove_button"
        android:text="SET"
        android:fontFamily="@font/opensans_semibold"
        android:layout_centerInParent="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/get_button"
        android:layout_centerInParent="true">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/database_display"
            android:fontFamily="@font/raleway_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data: " />
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_semibold"
        android:text="REMOVE"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/image_database"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/remove_button"
        android:layout_centerInParent="true" />

</RelativeLayout>