<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="800dp"
    android:minHeight="300dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/testing_complete"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/testing_time_taken_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_taken"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="8dp">
        </View>

        <TextView
            android:id="@+id/indicated_error_points_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="indicated error points"
            android:textSize="16sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/overall_accuracy"
        android:textSize="24sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        style="@android:style/Widget.Material.RatingBar"
        android:rating="3"
        android:stepSize="0.5"
        android:progressTint="@color/barbiePink"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ratingTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ratingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Comments (Optional) "
            android:fontFamily="@font/raleway_regular"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_testing_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/opensans_semibold"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:text="@string/cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_rating_button"
            android:text="@string/submit"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_semibold"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

</LinearLayout>